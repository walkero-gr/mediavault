{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build AmigaOS4",
            "type": "shell",
            "linux": {
                "command": "make",
                "args": [
                    "-f",
                    "Makefile.docker",
                    "MediaVault.OS4"
                ]
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(warning|error) ([0-9]*) in line ([0-9]*) of \"(.*)\": (.*)$",
                    "severity": 1,
                    "line": 3,
                    "file": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean build files",
            "type": "shell",
            "linux": {
                "command": "make",
                "args": [
                    "-f",
                    "Makefile.docker",
                    "clean"
                ]
            }
        },
        {
            "label": "Create release",
            "type": "shell",
            "linux": {
                "command": "make",
                "args": [
                    "-f",
                    "Makefile.docker",
                    "release"
                ]
            }
        },
        {
            "label": "Clean release files",
            "type": "shell",
            "linux": {
                "command": "make",
                "args": [
                    "-f",
                    "Makefile.docker",
                    "clean-release"
                ]
            }
        }
    ]
}
